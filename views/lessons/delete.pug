extends ../layouts/common.pug
block content
    h1 Xóa buổi trợ giảng
    .card.card-body.text-center
        form(action="/lessons/delete", method="POST")
            h5.mb-2 Xác nhận xóa buổi trợ giảng
            .input-group.mb-3
                .input-group-prepend
                    span#inputGroup-sizing-default.input-group-text ID
                input.form-control(name="id", type='text', value= lesson._id, readonly)
            .input-group.mb-3
                .input-group-prepend
                    span#inputGroup-sizing-default.input-group-text Tên học sinh
                input.form-control(type='text', value= lesson.student_id.name, readonly)
            button.btn.btn-danger Xác nhận
            a.btn.btn-light.ml-2(href="/lessons/view/"+lesson._id) Hủy