extends ../layouts/common.pug
block header
    title Buổi học #{period.name}
block content
    .row.text-center
        .col
            .row
                .col-12.mb-2
                    .card.border-info
                        h6.card-header.bg-info.text-white Buổi #{period.type}
                        .card-body= period.name
                .col.mb-2
                    .card
                        h6.card-header Lớp
                        .card-body
                            a.mr-1.badge.badge-info(href="/classes/"+period.class.name)= period.class.name
                .col.mb-2
                    .card
                        h6.card-header Ngày
                        .card-body= period.date.toISOString().slice(0,10)
                .col-12.mb-2
                    .card
                        h6.card-header Người đứng lớp
                        .card-body= period.instructor.name
                if period.note
                    .col-12.mb-2
                        .card
                            h6.card-header Ghi chú
                            .card-body= period.note
        
