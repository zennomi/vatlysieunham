extends ../layouts/common.pug
block content
    h1 Xóa buổi BTVN
    .card.card-body.text-center
        form(action="/homeworks/delete", method="POST")
            h5.mb-2 Xác nhận xóa BTVN
            .input-group.mb-3
                .input-group-prepend
                    span#inputGroup-sizing-default.input-group-text ID
                input.form-control(name="id", type='text', value= homework._id, readonly)
            .input-group.mb-3
                .input-group-prepend
                    span#inputGroup-sizing-default.input-group-text Lớp
                input.form-control(type='text', value= homework.class.name, readonly)
            button.btn.btn-danger Xác nhận
            a.btn.btn-light.ml-2(href="/homeworks/view/"+homework._id) Hủy